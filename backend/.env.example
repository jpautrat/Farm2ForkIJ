# Farm2Fork Backend Environment Variables

# Node Environment
NODE_ENV=development # development, staging, production

# Server Configuration
PORT=5000
HOST=localhost
API_BASE_URL=/api
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/farm2fork
MONGODB_USER=
MONGODB_PASSWORD=

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@farm2fork.com
EMAIL_FROM_NAME=Farm2Fork

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CURRENCY=usd

# Shipping (Shippo)
SHIPPO_API_KEY=your_shippo_api_key
SHIPPO_API_VERSION=2018-02-08

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=farm2fork-uploads

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Security
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ELASTICSEARCH=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Admin Configuration
ADMIN_EMAIL=admin@farm2fork.com
ADMIN_PASSWORD=change_this_password_immediately

# Elasticsearch (for product search)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword