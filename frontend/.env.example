# Farm2Fork Frontend Environment Variables

# React Environment
REACT_APP_ENV=development # development, staging, production

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000 # 30 seconds

# Authentication
REACT_APP_AUTH_STORAGE_KEY=farm2fork_auth
REACT_APP_TOKEN_REFRESH_INTERVAL=3600000 # 1 hour in milliseconds

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=false

# External Services
REACT_APP_STRIPE_PUBLIC_KEY=your_stripe_public_key
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# UI Configuration
REACT_APP_DEFAULT_THEME=light # light, dark
REACT_APP_DEFAULT_LANGUAGE=en # en, es, fr
REACT_APP_ITEMS_PER_PAGE=12

# Image Configuration
REACT_APP_IMAGE_BASE_URL=https://your-s3-bucket.s3.amazonaws.com/
REACT_APP_DEFAULT_PRODUCT_IMAGE=/assets/images/default-product.jpg
REACT_APP_DEFAULT_AVATAR=/assets/images/default-avatar.jpg

# Social Media
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_TWITTER_HANDLE=farm2fork

# Contact Information
REACT_APP_CONTACT_EMAIL=support@farm2fork.com
REACT_APP_CONTACT_PHONE=(555) 123-4567

# Deployment
REACT_APP_SITE_URL=https://farm2fork.com
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_MOCK_API=false